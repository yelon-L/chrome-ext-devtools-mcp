{
  "manifest_version": 3,
  "name": "MCP Service Worker Activator",
  "version": "1.0.0",
  "description": "Helper extension for chrome-ext-devtools-mcp to automatically activate Service Workers",
  "permissions": [
    "management",
    "debugger"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "http://127.0.0.1:*/*"
    ]
  }
}
